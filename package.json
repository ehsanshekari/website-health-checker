{
  "name": "website",
  "version": "0.1.0",
  "description": "This repo contains a sample project for website monitoring using AWS CDK and Lambda.",
  "engines": {
    "node": ">=22.0.0",
    "pnpm": ">=10.0.0"
  },
  "scripts": {
    "build": "pnpm -r run build",
    "lint": "eslint . --ext .ts,.tsx --max-warnings=0",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "prepare": "husky",
    "test": "pnpm -r run test",
    "test:coverage": "pnpm -r run test:coverage",
    "coverage:merge": "pnpm run coverage:coverage && node scripts/merge-coverage.js"
  },
  "lint-staged": {
    "**/*.{ts,tsx,js,jsx}": [
      "eslint --fix"
    ]
  },
  "devDependencies": {
    "@types/jest": "30.0.0",
    "@types/node": "25.0.9",
    "jest": "30.2.0",
    "ts-jest": "29.4.6",
    "ts-node": "10.9.2",
    "typescript": "5.9.3",
    "@commitlint/cli": "20.3.1",
    "@commitlint/config-conventional": "20.3.1",
    "@typescript-eslint/eslint-plugin": "8.53.0",
    "@typescript-eslint/parser": "8.53.0",
    "eslint": "9.39.2",
    "eslint-config-prettier": "10.1.8",
    "husky": "9.1.7",
    "lint-staged": "16.2.7",
    "typescript-eslint": "8.53.0",
    "istanbul-lib-coverage": "3.2.0",
    "istanbul-lib-report": "3.0.0",
    "istanbul-reports": "3.1.5"
  }
}
